<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HealthTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HealthTracker.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Mental"
            ContentTemplate="{DataTemplate local:MentalHealthPage}"
            Route="MentalHealthPage" />

        <ShellContent
            Title="Physical"
            ContentTemplate="{DataTemplate local:PhysicalHealthPage}"
            Route="PhysicalHealthPage" />

        <ShellContent
            Title="Emotional"
            ContentTemplate="{DataTemplate local:EmotionalHealthPage}"
            Route="EmotionalHealthPage" />

        <ShellContent
            Title="Journal"
            ContentTemplate="{DataTemplate local:JournalPage}"
            Route="JournalPage" />

        <ShellContent
            Title="Todo"
            ContentTemplate="{DataTemplate local:TodoPage}"
            Route="TodoPage" />
        <ShellContent
            Title="Results"
            ContentTemplate="{DataTemplate local:ResultsPage}"
            Route="ResultsPage" />
    </TabBar>

</Shell>
